<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message"
            android:textSize="24sp" />

        <Button
            android:id="@+id/currentForecastButton"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeText"
            android:layout_marginTop="239dp"
            android:text="@string/current_forecast"
            android:onClick="irDetalle"/>

        <Button
            android:id="@+id/cityListButton"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentForecastButton"
            android:layout_marginTop="64dp"
            android:text="@string/city_list"
            android:onClick="listarCiudades"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>